        <Button
            android:id="@+id/btn6"
            android:layout_marginLeft="8dp"
            android:onClick="check"/>

        <Button
            android:id="@+id/btn7"
            android:onClick="check"/>
        <Button
            android:id="@+id/btn8"
            android:layout_marginLeft="8dp"
            android:onClick="check"/>
        <Button
            android:id="@+id/btn9"
            android:layout_marginLeft="8dp"
            android:onClick="check"/>


    </GridLayout>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
